                    <Rectangle Grid.Row="3" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="25" Stroke="Black" VerticalAlignment="Top" Width="1"/>
                </Grid>
            </StackPanel>
            <ScrollViewer Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel Grid.Row="1" Margin="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Expander x:Name="sides_expander" Header="{Binding SidesHeader, TargetNullValue=Sides}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsExpanded="True">
                        <Grid Margin="17">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="182*"/>
                                <ColumnDefinition Width="242*"/>
                                <ColumnDefinition Width="250*"/>
                                <ColumnDefinition Width="294*"/>
                                <ColumnDefinition Width="527*"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton Grid.Row="0" Grid.Column="0" Background="{DynamicResource PrimaryHueDarkBrush}" Margin="6" Content="Fries" cal:Message.Attach="[Event Checked] = [Action SetSideHeader($eventargs)]" />
                            <RadioButton Grid.Row="0" Grid.Column="1" Background="{DynamicResource PrimaryHueDarkBrush}" Margin="6" Content="Yam Fries ($2.55)" cal:Message.Attach="[Event Checked] = [Action SetSideHeader($eventargs)]"/>
                            <RadioButton Grid.Row="0" Grid.Column="2" Background="{DynamicResource PrimaryHueDarkBrush}" Margin="6" Content="Cactus Cut Potatoes ($2.55)" cal:Message.Attach="[Event Checked] = [Action SetSideHeader($eventargs)]"/>
                            <RadioButton Grid.Row="1" Grid.Column="0" Background="{DynamicResource PrimaryHueDarkBrush}" Margin="6" Content="Caesar Salad" cal:Message.Attach="[Event Checked] = [Action SetSideHeader($eventargs)]"/>
                            <RadioButton Grid.Row="1" Grid.Column="1" Background="{DynamicResource PrimaryHueDarkBrush}" Margin="6" Content="House Salad" cal:Message.Attach="[Event Checked] = [Action SetSideHeader($eventargs)]"/>
                            <RadioButton Grid.Row="1" Grid.Column="2" Background="{DynamicResource PrimaryHueDarkBrush}" Margin="6" Content="Mediterranean Salad ($2.55)" cal:Message.Attach="[Event Checked] = [Action SetSideHeader($eventargs)]"/>
                            <RadioButton Grid.Row="1" Grid.Column="3" Background="{DynamicResource PrimaryHueDarkBrush}" Margin="6" Content="Spinach Salad ($2.55)" cal:Message.Attach="[Event Checked] = [Action SetSideHeader($eventargs)]"/>
                            <RadioButton Grid.Row="2" Grid.Column="0" Background="{DynamicResource PrimaryHueDarkBrush}" Margin="6" Content="Soup of the Day" cal:Message.Attach="[Event Checked] = [Action SetSideHeader($eventargs)]"/>
                            <RadioButton Grid.Row="2" Grid.Column="1" Background="{DynamicResource PrimaryHueDarkBrush}" Margin="6" Content="Broccoli Cheese" cal:Message.Attach="[Event Checked] = [Action SetSideHeader($eventargs)]"/>
                            <RadioButton Grid.Row="2" Grid.Column="2" Background="{DynamicResource PrimaryHueDarkBrush}" Margin="6" Content="French Onion" cal:Message.Attach="[Event Checked] = [Action SetSideHeader($eventargs)]"/>
                            <RadioButton Grid.Row="2" Grid.Column="3" Background="{DynamicResource PrimaryHueDarkBrush}" Margin="6" Content="Potato Bacon" cal:Message.Attach="[Event Checked] = [Action SetSideHeader($eventargs)]"/>
                            <Label Grid.Row="2" Grid.Column="4" x:Name="soup_up_charge" Content="*All soups $3.00 up-charge"/>
                            <RadioButton Grid.Row="3" Grid.Column="0" x:Name="none_rbn" Margin="6" Content="None" cal:Message.Attach="[Event Checked] = [Action SetSideHeader($eventargs)]"/>
                        </Grid>
                    </Expander>
                    <Expander x:Name="extras_expander" Header="{Binding ExtrasHeader, TargetNullValue=Extras}"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid Margin="17">
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Add a Dip:" />
                                    <ComboBox x:Name="DipOptions" SelectedItem="{Binding AddDipComboBox, TargetNullValue=None}"  Margin="2" AllowDrop="True"  IsTextSearchEnabled="False" IsTabStop="False"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Add Other:"/>
                                    <CheckBox x:Name="GravyCheckbox"  Background="{DynamicResource PrimaryHueDarkBrush}" Content="Gravy" Margin="6"  VerticalContentAlignment="Center"/>
                                    <CheckBox x:Name="CheeseCheckbox" Background="{DynamicResource PrimaryHueDarkBrush}" Content="Extra Cheese" Margin="6"  VerticalContentAlignment="Center"/>
                                    <CheckBox x:Name="BaconCheckbox" Background="{DynamicResource PrimaryHueDarkBrush}" Content="Bacon" Margin="6" VerticalContentAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Expander>
                    <Expander x:Name="allergies_expander" Header="{Binding AllergiesHeader, TargetNullValue=Allergies}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid Margin="17">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Name="NutAllergiesCheckbox" Background="{DynamicResource PrimaryHueDarkBrush}"  Content="Nuts" Margin="6"  VerticalContentAlignment="Center"/>
                                <CheckBox x:Name="ShellfishAllergiesCheckbox" Background="{DynamicResource PrimaryHueDarkBrush}" Content="Shellfish" Margin="6"  VerticalContentAlignment="Center"/>
                                <CheckBox x:Name="DairyAllergiesCheckbox" Background="{DynamicResource PrimaryHueDarkBrush}" Content="Dairy" Margin="6"  VerticalContentAlignment="Center"/>
                                <CheckBox x:Name="GlutenAllergiesCheckbox" Background="{DynamicResource PrimaryHueDarkBrush}" Content="Gluten" Margin="6"  VerticalContentAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Expander>
                    <Expander x:Name="soi_expander" Header="{Binding SOIHeader, TargetNullValue='Special Order Instructions'}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid Margin="25">
                            <StackPanel Orientation="Vertical">
                                <TextBox x:Name="soi_textbox" Text="{Binding SOITextBox, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Height="25" md:HintAssist.Hint="Enter special order instructions here"/>
                            </StackPanel>
                        </Grid>
                    </Expander>
                    <Expander x:Name="bill_expander" Header="{Binding BillHeader, TargetNullValue=Bill}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid Margin="17">
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="add_new_bill" Style="{DynamicResource MaterialDesignRaisedDarkButton}" Content="Add Bill" Margin="4"  VerticalContentAlignment="Center" />
                                <CheckBox x:Name="BillCheckbox1" Background="{DynamicResource PrimaryHueDarkBrush}" Content="Bill 1" Margin="7"  VerticalContentAlignment="Center" />
                                <CheckBox x:Name="BillCheckbox2" Background="{DynamicResource PrimaryHueDarkBrush}" Content="Bill 2" Margin="7"  VerticalContentAlignment="Center"/>
                                <CheckBox x:Name="BillCheckbox3" Background="{DynamicResource PrimaryHueDarkBrush}" Content="Bill 3" Margin="7"  VerticalContentAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Expander>
                    <Expander Header="Nutritional Information" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
