<Window x:Class="BPIDM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BPIDM"
        mc:Ignorable="d"
        Title="Boston Pizza" WindowState="Maximized">
    <Grid Margin="10,10,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="80" Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition MinHeight="80" Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Height="80" VerticalAlignment="Top"/>
        <ListView Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Margin="0,0,5,0"/>
        <Grid Grid.Row="1" Grid.Column="1" x:Name="MainPane">
            <Frame Source="Utils/PageSwitcher.xaml"></Frame>
        </Grid>
        <Grid Grid.Row="3" Grid.ColumnSpan="2" Height="80" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
